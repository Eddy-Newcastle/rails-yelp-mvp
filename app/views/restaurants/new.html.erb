<h1>New restaurant</h1>

<%#= render 'form', restaurant: @restaurant %>

<%= simple_form_for(@restaurant) do |f| %>
<%=f.input :name %>
<%=f.input :address %>
<%=f.input :phone_number %>
<%=f.input :category, collection: Restaurant::CATEGORIES %>
<%=f.submit %>
<% end %>

<hr>
<%= link_to restaurants_path do %>
  <i class="fa fa-history"></i> Back to list
<% end %>
