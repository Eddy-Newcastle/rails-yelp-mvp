

<h1 class="d-flex justify-content-center"><%= @restaurant.name %></h1>

<p class="d-flex justify-content-center"><%= @restaurant.address %></p>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="d-flex justify-content-center"><%= review.content %></li>
    <li class="d-flex justify-content-center"><%= "#{review.rating}/5"%></li>
  <% end %>
</ul>

<hr>
<%= link_to restaurants_path do %>
  <i class="fa fa-history"></i> Back to list
<% end %>

<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %>
